@model WaterBillAppCore.ViewModel.EditRoleViewModel


@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Role</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="ListRoles" class="btn btn-info"> Cancel </a>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="card">
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">No user found </h5>
                    }
                </div>

                <div class="card-footer">
                    <a asp-controller="Administration" asp-action="ManageUserRoles" asp-route-roleId="@Model.Id" class="btn btn-info"> Add or Remove Users </a>
                </div>
            </div>

        </form>
    </div>
</div>



