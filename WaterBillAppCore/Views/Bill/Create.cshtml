@model WaterBillAppCore.ViewModel.BillViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Pay your water bill in few minutes </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PrevReading" class="control-label"></label>
                <input asp-for="PrevReading" class="form-control" />
                <span asp-validation-for="PrevReading" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentReading" class="control-label"></label>
                <input asp-for="CurrentReading" class="form-control" />
                <span asp-validation-for="CurrentReading" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Photo" class="form-control" />

                <label asp-for="Photo" class="control-label c2"></label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
 
            @section Scripts {
                <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.c2').html(fileName);
                });
            });
                </script>
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

